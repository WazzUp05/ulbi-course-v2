{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        // "./config/jest/*.ts",
        // "./config/jest/*.tsx",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./config/**/*.ts",
        "./config/**/*.tsx",
        "./webpack.config.ts",
        "./.eslintrc.js"
        // "./config/storybook/*.tsx",
        // "./config/storybook/*.ts"
    ]
}
